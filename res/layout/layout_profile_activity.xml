<com.audamob.doit.utils.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blurred_3" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_image_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_profile_segment_1_height"
               >
         	<ImageView 
         	      android:layout_width="match_parent"
         	        android:layout_height="match_parent"
         	        android:id="@+id/_image_info"
         	        android:scaleType="centerCrop"
         	          android:adjustViewBounds="true"
         	    />
         	<ImageView 
         	      android:layout_width="match_parent"
         	        android:layout_height="match_parent"

         	        android:scaleType="centerCrop"
         	          android:adjustViewBounds="true"
         	    />
                <RelativeLayout
                    android:id="@+id/profile_image_shadow"
                    android:layout_width="@dimen/sliding_menu_profile_picture_shadow_height_3"
                    android:layout_height="@dimen/sliding_menu_profile_picture_shadow_height_3"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custom_shape_3" >

                    <RelativeLayout
                        android:layout_width="@dimen/sliding_menu_profile_picture_shadow_height_2"
                        android:layout_height="@dimen/sliding_menu_profile_picture_shadow_height_2"
                        android:layout_centerVertical="true"
                        android:background="@drawable/custom_shape_2" >

                        <RelativeLayout
                            android:layout_width="@dimen/sliding_menu_profile_picture_shadow_height_1"
                            android:layout_height="@dimen/sliding_menu_profile_picture_shadow_height_1"
                            android:layout_centerVertical="true"
                            android:background="@drawable/custom_shape_1" >

                            <RelativeLayout
                                android:layout_width="@dimen/sliding_menu_profile_picture_shadow_height"
                                android:layout_height="@dimen/sliding_menu_profile_picture_shadow_height"
                                android:layout_centerVertical="true"
                                android:background="@drawable/custom_shape" >

                                <ImageView
                                    android:id="@+id/profile_image"
                                    android:layout_width="@dimen/sliding_menu_profile_picture_height"
                                    android:layout_height="@dimen/sliding_menu_profile_picture_height"
                                    android:layout_centerInParent="true"
                                    android:contentDescription="@string/profile"
                                    android:scaleType="centerCrop" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
				<RelativeLayout 
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				       android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/profile_image_shadow"
                    android:layout_centerHorizontal="true"
				    >
				    <RelativeLayout
                    android:id="@+id/layout_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   
                    android:layout_marginTop="10dp"
                   >
  
                    <TextView
                        android:id="@+id/profile_name_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/flat_clouds"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/profile_age_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/profile_name_p"
                        android:textColor="@color/flat_clouds"
                        android:textSize="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_2"
                   >

                    <TextView
                        android:id="@+id/profile_Activity_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/flat_clouds"
                        android:textSize="17dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_3"
                 >

                    <TextView
                        android:id="@+id/profile_location_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="@color/flat_clouds"
                        android:textSize="16dp" />
                </RelativeLayout>
				    
				</RelativeLayout>
                
            </RelativeLayout>

            <View
                android:id="@+id/placeholder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sticky_height" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sticky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.viewpagerindicator.TabPageIndicator
                android:id="@+id/indicatorProfile"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/swipey_tabs_height"
                android:background="@drawable/bg_opacity" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpagerProfile"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dip" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</com.audamob.doit.utils.ObservableScrollView>
