<com.audamob.doit.utils.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipeytabs="http://schemas.android.com/apk/res/com.audamob.doit"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flat_clouds" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/HeaderLayout"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_image_info"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="10dp" >

                <RelativeLayout
                    android:id="@+id/layout_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/profile_picture"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/layout_1" >

                    <TextView
                        android:id="@+id/profile_name_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/flat_asbestos"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/profile_age_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/profile_name_p"
                        android:textColor="@color/flat_asbestos"
                        android:textSize="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_2"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/layout_1" >

                    <TextView
                        android:id="@+id/profile_Activity_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/flat_asbestos"
                        android:textSize="17dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_3"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/layout_1" >

                    <TextView
                        android:id="@+id/profile_location_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="@color/flat_asbestos"
                        android:textSize="16dp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/placeholder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sticky_height" />
        </LinearLayout>

      

            <TabHost
                android:id="@+id/sticky"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ccc" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:orientation="vertical" >

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp" />

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ccc"
                        android:padding="10dp" />
                </LinearLayout>
            </TabHost>
       
    </FrameLayout>

</com.audamob.doit.utils.ObservableScrollView>