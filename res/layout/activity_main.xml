<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   
    xmlns:app="http://schemas.android.com/apk/res/com.audamob.doit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthenticationActivity" 
    android:background="#f2f2f2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/FB_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fb_bg" >

            <ImageView
                android:id="@+id/fb_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/fb_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/fb_id"
                android:text="@string/Sign_In_Facebook"
                android:textColor="#ffffff"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/GP_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FB_Login"
            android:layout_centerHorizontal="true"
            android:background="@drawable/gp_bg"
            android:layout_marginTop="10dp"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/gp_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/gp_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/gp_id"
                android:text="@string/Sign_In_Google_Plus"
                android:textColor="#ffffff"
                android:textSize="15dp" >
            </TextView>
        </RelativeLayout>
    </RelativeLayout>

   <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/sign_in_status"
        android:text="statut"
       
       />
   
   <de.passsy.holocircularprogressbar.HoloCircularProgressBar
    android:id="@+id/progressBar_loading"
    android:layout_width="100dp"
    android:layout_height="100dp"
     app:stroke_width="10dp"
    app:progress="0.4"
    app:marker_progress="0.6"
    app:progress_color="@android:color/holo_orange_dark"
    app:progress_background_color="#cccccc"
   
    app:marker_visible="false"
    app:thumb_visible="false"
  />
 
</RelativeLayout>
